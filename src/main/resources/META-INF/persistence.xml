<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="pu" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>org.university.entites.Group</class>
        <class>org.university.entites.Room</class>
        <class>org.university.entites.ScheduleRecord</class>
        <class>org.university.entites.Student</class>
        <class>org.university.entites.Teacher</class>
        <class>org.university.entites.Person</class>
        <class>org.university.entites.Lesson</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5433/postgres"/>
            <property name="javax.persistence.jdbc.user" value="postgress"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="javax.persistence.jdbc.default_schema" value="school"/>
            <property name="dialect" value="org.hibernate.dialect.PostgreSQLDialect"/> <!-- DB Dialect -->
            <property name="hbm2ddl.auto" value="update"/> <!-- create / create-drop / update -->
            <property name="packagesToScan" value="org.university.entites"/>
            <property name="show_sql" value="true"/>
            <property name="format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
